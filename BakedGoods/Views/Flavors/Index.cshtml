@{
  Layout = "_Layout";
}

@using BakedGoods.Models;
@model List<BakedGoods.Models.Flavor>

<h1>All flavors:</h1>

@if(@Model.Count == 0)
{
  <h3>There are no flavors of pastry right now!</h3>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Show", new { id = flavor.FlavorId })</li>
    }
  </ul>  
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>