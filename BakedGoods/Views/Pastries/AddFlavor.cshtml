@{
  Layout = "_Layout";
}

@model BakedGoods.Models.Pastry

<h1>@Html.DisplayFor(model => model.Name)</h1>
<h4>Add a new flavor for this pastry type:</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PastryId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("View all pastries", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>