@{
  Layout = "_Layout";
}

@using BakedGoods.Models;
@model List<BakedGoods.Models.Pastry>

<h1>All pastries:</h1>

@if(@Model.Count == 0)
{
  <h3>There are no pastries in the system right now.</h3>
}
else
{
  <ul>
    @foreach (Pastry pastry in Model)
    {
      <li>@Html.ActionLink($"{pastry.Name}", "Show", new { id = pastry.PastryId })</li>
    }
  </ul>  
}

<p>@Html.ActionLink("Add new pastry", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>